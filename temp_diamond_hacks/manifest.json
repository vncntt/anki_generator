{
  "manifest_version": 3,
  "name": "WebText Extractor",
  "version": "1.0",
  "description": "Extract main content from websites using Readability.js",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}